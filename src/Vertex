package opengl;

public class Vertex {
	
	private float c1, c2, c3;
	
	public Vertex(float c1, float c2, float c3) {
		this.c1 = c1;
		this.c2 = c2;
		this.c3 = c3;
	}
	
	public float firstCoordinate() {
		return c1;
	}
	
	public float secondCoordinate() {
		return c2;
	}

	public float thirdCoordinate() {
		return c3;
	}
	
	
}
